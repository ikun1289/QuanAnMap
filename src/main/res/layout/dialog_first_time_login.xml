<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn"
    android:backgroundTint="#FFFFFF"
    android:gravity="center"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="8dp"
        >
        <TextView
            android:id="@+id/dialog_thongbao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Lần đầu đăng nhập"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:gravity="center"
            android:text="Có vẻ như đây là lần đầu bạn đăng nhập, xin hãy chọn kiểu tài khoản bạn muốn tạo!"
            android:textColor="#2B2B2B"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btndialogChuQuan"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn"
                android:gravity="center"
                android:text="Chủ quán"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btndialogNguoiDung"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:background="@drawable/btn"
                android:gravity="center"
                android:text="Người dùng"
                android:textAlignment="center"
                app:backgroundTint="#FFC107" />
        </LinearLayout>
    </LinearLayout>




</androidx.cardview.widget.CardView>